{
	"info": {
		"name": "老虎机游戏API",
		"description": "老虎机游戏后端API测试集合",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "认证",
			"item": [
				{
					"name": "注册",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser_{{$timestamp}}\",\n    \"email\": \"test_{{$timestamp}}@example.com\",\n    \"password\": \"Test123456!\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/auth/register",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "auth", "register"]
						}
					}
				},
				{
					"name": "登录",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.access_token) {",
									"    pm.environment.set(\"TOKEN\", jsonData.data.access_token);",
									"} else if (jsonData.access_token) {",
									"    pm.environment.set(\"TOKEN\", jsonData.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"Test123456!\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/auth/login",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "钱包",
			"item": [
				{
					"name": "查询余额",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/wallet/balance",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "wallet", "balance"]
						}
					}
				},
				{
					"name": "充值（测试）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 10000\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/wallet/deposit",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "wallet", "deposit"]
						}
					}
				},
				{
					"name": "提现（模拟）",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 1000\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/wallet/withdraw",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "wallet", "withdraw"]
						}
					}
				},
				{
					"name": "交易记录",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/wallet/transactions?page=1&page_size=20",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "wallet", "transactions"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "page_size",
									"value": "20"
								}
							]
						}
					}
				},
				{
					"name": "钱包统计",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/wallet/statistics",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "wallet", "statistics"]
						}
					}
				}
			]
		},
		{
			"name": "老虎机游戏",
			"item": [
				{
					"name": "开始游戏",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.session_id) {",
									"    pm.environment.set(\"SESSION_ID\", jsonData.session_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"bet_amount\": 100\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/start",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "start"]
						}
					}
				},
				{
					"name": "执行转动",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"session_id\": \"{{SESSION_ID}}\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/spin",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "spin"]
						}
					}
				},
				{
					"name": "结算游戏",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"session_id\": \"{{SESSION_ID}}\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/settle",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "settle"]
						}
					}
				},
				{
					"name": "会话信息",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/session/{{SESSION_ID}}",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "session", "{{SESSION_ID}}"]
						}
					}
				},
				{
					"name": "游戏历史",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/history?page=1&page_size=20",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "history"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "page_size",
									"value": "20"
								}
							]
						}
					}
				},
				{
					"name": "用户统计",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{TOKEN}}"
							}
						],
						"url": {
							"raw": "{{BASE_URL}}/api/v1/slot/stats",
							"host": ["{{BASE_URL}}"],
							"path": ["api", "v1", "slot", "stats"]
						}
					}
				}
			]
		},
		{
			"name": "健康检查",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{BASE_URL}}/health",
					"host": ["{{BASE_URL}}"],
					"path": ["health"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "BASE_URL",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "TOKEN",
			"value": "",
			"type": "string"
		},
		{
			"key": "SESSION_ID",
			"value": "",
			"type": "string"
		}
	]
}